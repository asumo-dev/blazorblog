@using Services
@using BlazorBlog.Core.Models
@inject IUriGenerator UriGenerator

<nav>
    <ul class="pagination">
        @if (PagedPosts.HasPrevPage)
        {
            <li class="page-item">
                <a class="page-link" href="@UriGenerator.Posts(PagedPosts.CurrentPage)">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        @for (var i = 1; i < PagedPosts.TotalPages + 1; i++)
        {
            <li class="page-item @(i == PagedPosts.CurrentPage + 1 ? "active" : "")">
                <a class="page-link" href="@UriGenerator.Posts(i)">@(i)</a>
            </li>
        }
        @if (PagedPosts.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="@UriGenerator.Posts(PagedPosts.CurrentPage + 2)">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</nav>

@code {
    [Parameter]
    public PagedPostCollection PagedPosts { get; set; } = default!;
}